@using Orchard.Liquid;
@using Orchard.Liquid.Drops;
@model Orchard.Liquid.ViewModels.LiquidPartViewModel
@inject ILiquidManager LiquidManager
@inject Orchard.ContentManagement.IContentManager ContentManager
@inject YesSql.Core.Services.ISession Session

@{ 
    string liquid = Model.Liquid;

    var model = new
    {
        ContentItem = Model.LiquidPart.ContentItem,
        Context = Context,
        User = User,
        Query = new QueryDrop(ContentManager, Session),
        Url = new UrlDrop(Url)
    };

    var html = LiquidManager.GetTemplate(liquid).Render(DotLiquid.Hash.FromAnonymousObject(model));
}

@Html.Raw(html)
